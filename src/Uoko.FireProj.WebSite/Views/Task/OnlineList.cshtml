@using Microsoft.AspNet.Identity
@using Uoko.FireProj.DataAccess.Query
@{
    ViewBag.Title = "上线列表";
    var loginUserId = 1;//this.User.Identity.GetUserId();
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="@Url.Action("Index", "Task")">首页</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="@Url.Action("OnlineList", "Task")">上线列表</a>
        </li>
    </ul>
</div>

<div class="row" ng-controller="OnlineListController">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">

                <form role="form" class="form form-horizontal ng-pristine ng-invalid ng-invalid-required ng-valid-minlength ng-valid-max-tags ng-valid-min-tags ng-valid-leftover-text" name="form" ng-submit="Save(form.$valid)" novalidate="">
                 <div class="form-body">
                     <div class="form-group form-md-line-input">
                         <label class="col-md-2 control-label">项目</label>
                         <div class="col-md-10">
                             <select class="form-control">
                                 <option>fire-project</option>
                                 <option>sso-project</option>
                                 <option>ids-project</option>
                             </select>
                         </div>
                     </div>

                    <div class="form-group form-md-line-input">
                        <label class="col-md-2 control-label">部署服务器</label>
                        <div class="col-md-10">
                            <select name="deployenvironment" class="form-control ng-pristine ng-invalid ng-invalid-required ng-touched" ng-model="taskInfo.Server" required=""><option value="? object:null ?"></option>
                                <!-- ngRepeat: server in ServerList -->
                            </select>
                            <div class="" ng-show="form.$submitted || form.deployenvironment.$touched">
                                <span class="error-msg" ng-show="form.deployenvironment.$error.required">部署服务器必选</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        <label class="col-md-2 control-label">域名</label>
                        <div class="col-md-10">
                            <select name="domain" class="form-control ng-pristine ng-untouched ng-invalid ng-invalid-required" ng-model="taskInfo.DomainInfo" required=""><option value="? object:null ?"></option>
                                <!-- ngRepeat: domain in DomainList -->
                            </select>
                            <div class="ng-hide" ng-show="form.$submitted || form.domain.$touched">
                                <span class="error-msg" ng-show="form.domain.$error.required">域名必选.</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-md-line-input">
                        <label class="col-md-2 control-label">
                            <a target="_blank" href="http://semver.org/lang/zh-CN/">上线版本</a>
                        </label>
                        <div class="col-md-10">
                           <input name="onlineVersion" ng-model="taskInfo.OnlineVersion" class="form-control ng-pristine ng-invalid ng-invalid-required ng-touched" placeholder="主版本.次版本.修订版本" required="" type="text">
                        </div>
                    </div>
                           
                    </div>
                    <div class="form-actions right">
                        <button type="button" class="btn default" ng-click="Cancel()">取消</button>
                        <button type="submit" class="btn blue" ng-click=""><i class="fa fa-check"></i> 保存</button>
                    </div>
                  
                </form>

            </div>

            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-condensed">
                        <thead>
                        <tr>
                            <th rowspan="2">任务名称</th>
                            <th rowspan="2">分支</th>
                            <th colspan="2">IOC</th>
                            <th colspan="2">Pre</th>
                            <th colspan="2">Online</th>
                            <th rowspan="2">发起人</th>
                            <th rowspan="2">最后操作人</th>
                        </tr>
                        <tr>
                            <th>部署</th>
                            <th>测试</th>
                            <th>部署</th>
                            <th>测试</th>
                            <th>部署</th>
                            <th>测试</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr ng-repeat="task in taskInfos">
                            <td><a class="text-primary" href="/Task/Detail?taskId={{task.TaskInfo.Id}}">{{task.TaskInfo.TaskName}}</a> </td>
                            <td>{{task.TaskInfo.Branch}}</td>
                            <td title="{{(task.DeployInfoIoc.DeployStatus | DeployStatusFilter).Title}}">
                                <div ng-if="task.DeployInfoIoc">
                                    <span ng-class="(task.DeployInfoIoc.DeployStatus | DeployStatusFilter).IconClass" ></span>
                                </div>
                            </td>
                            <td title="{{task.IocTestAllPassed ? '测试全部通过' : ''}}">
                                <span class="glyphicon glyphicon-ok" ng-show="task.IocTestAllPassed"></span>
                            </td>
                            <td title="{{(task.DeployInfoPre.DeployStatus | DeployStatusFilter).Title}}">
                                <span ng-class="(task.DeployInfoPre.DeployStatus | DeployStatusFilter).IconClass" ng-show="task.DeployInfoPre" ></span>
                            </td>
                            <td title="{{task.PreTestAllPassed ? '测试全部通过' : ''}}">
                                <span class="glyphicon glyphicon-ok" ng-show="task.PreTestAllPassed"></span>
                            </td>
                            <td>{{task.TaskInfo.DeployInfoOnlineJson}}</td>
                            <td title="{{task.OnlineTestAllPassed ? '测试全部通过' : ''}}">
                                <span class="glyphicon glyphicon-ok" ng-show="task.OnlineTestAllPassed"></span>
                            </td>
                            <td>{{task.TaskInfo.CreatorName}}</td>
                            <td>{{task.TaskInfo.ModifierName}}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="Query()" first-text="首页" last-text="末页"
                                            previous-text="上一页" next-text="下一页" items-per-page="pageSize" max-size="5" boundary-links="true" boundary-link-numbers="true" rotate="false"></uib-pagination>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->

    </div>
</div>

@section Scripts {
    <script src="~/app/services/ProjectService.js"></script>
    <script src="~/app/services/TaskService.js"></script>
    <script src="~/app/filters/CommonFilter.js"></script>
    <script src="~/app/controllers/OnlineList.js"></script>
}