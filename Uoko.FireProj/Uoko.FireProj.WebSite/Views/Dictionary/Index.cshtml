
@{
    ViewBag.Title = "Index";
}
@section Css {
<link href="~/Content/treeGrid.css" rel="stylesheet" />
}
<div class="col-md-12">
    <div ng-controller="DictionaryController">
        <!-- BEGIN  HEADER-->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="/">主页</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="#">数据字典</a>
                </li>
            </ul>
        </div>
        <!-- END  HEADER-->
        <!-- BEGIN  TABLE -->
        <div class="portlet box blue" ng-hide="isShowForm">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-windows"></i>字典列表
                </div>

            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a id="sample_editable_1_new" class="btn green" href="@Url.Action("Form", "Dictionary")">
                                    新增 <i class="fa fa-plus"></i>
                                </a>
                            </div>
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn green" ng-click="my_tree.expand_all()">
                                    展开 <i class="fa fa-angle-down"></i>
                                </button>
                            </div>
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn green" ng-click="my_tree.collapse_all()">
                                    合并 <i class="fa fa-angle-up"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
                <tree-grid tree-data="tree_data" tree-control="my_tree" col-defs="col_defs" expand-on="expanding_property" on-select="my_tree_handler(branch)" expand-level="2" icon-leaf="glyphicon glyphicon-globe"></tree-grid>
            </div>
        </div>
        <!-- END  TABLE -->
     
    </div>
</div>
@section Scripts {
    <script src="~/app/service/dictionary.js"></script>
    <script src="~/Content/tree-grid-directive.js"></script>
}


